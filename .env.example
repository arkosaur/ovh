# ===================================================================
# ==           Project Environment Variables (Root .env)           ==
# ===================================================================
# Rename this file to .env in the project root and fill in the values.

# -------------------
# Shared Secret Key
# -------------------
# This key MUST be identical for both frontend and backend.
API_SECRET_KEY=ovh-phantom-sniper-2024-secret-key

# -------------------
# Frontend Settings
# -------------------
# Password to access the frontend UI.
FRONTEND_PASSWORD=admin123

# -------------------
# Backend Settings
# -------------------
# OVH API Credentials
APP_KEY=
APP_SECRET=
CONSUMER_KEY=

# OVH API Endpoint
ENDPOINT=ovh-eu

# Telegram Bot for notifications (Optional)
TG_TOKEN=
TG_CHAT_ID=

# Default Server Order Settings
IAM=go-ovh-ie
ZONE=IE
TARGET_OS=none_64.en
TARGET_DURATION=P1M

# Default Task Settings
TASK_INTERVAL=60